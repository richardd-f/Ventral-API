{
  "compilerOptions": {
    "module": "nodenext",
    "target": "ES2020",

    "types": ["node", "express"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,

    "moduleResolution": "nodenext",
    "outDir": "dist"
  }
}
